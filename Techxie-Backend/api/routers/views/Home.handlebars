				<div attr = "small-Folder-name"><a>{{ this.F_name}}</a><a attr="description" ></a></div>
				<div attr="small-Folder-more" data="more-box"><i class="mdi mdi-dots-vertical"></i><div attr="pop-box"><div attr=pop-item><i class="mdi mdi-delete-sweep"></i><a>delete</a></div><div attr=pop-item><i class="mdi mdi-content-copy"></i><a>copy</a></div><div attr=pop-item><i class="mdi mdi-information-variant"></i><a>info</a></div></div></div>
			</div>
			{{/each}}
